{
  "name": "pokeclicker-desktop",
  "version": "1.0.4",
  "description": "PokeClicker Desktop",
  "repository": {
    "type": "git",
    "url": "https://github.com/RedSparr0w/Pokeclicker-desktop.git"
  },
  "main": "src/main.js",
  "scripts": {
    "start": "electron ./",
    "dist:32": "electron-builder --ia32",
    "dist:64": "electron-builder --ia64 -c.artifactName=${productName}-64bit-setup-${version}.${ext}",
    "win": "electron-builder --windows portable",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": {
    "name" : "RedSparr0w",
    "email" : "desktop@pokeclicker.com"
  },
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.4.16",
    "discord-rpc": "^3.1.3",
    "electron-updater": "^4.3.5"
  },
  "devDependencies": {
    "electron": "^9.2.0",
    "electron-builder": "^22.8.0"
  },
  "build": {
    "productName": "Pok√©Clicker",
    "asar": false,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "requestedExecutionLevel": "highestAvailable"
    }
  }
}
